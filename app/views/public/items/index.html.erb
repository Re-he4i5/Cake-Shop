<div class="container">
  <div class="col">
    <h4 class="font-weight-bold">
      商品一覧 (全<%= @items.count %>件)
    </h4>
    <div class="row my-5 item_index">
      <% @items.each do |item| %>
        <div class="d-flex flex-column  mb-3 ">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_image(200,200) %>
            <div class="item_name">
              <%= item.name %>
            </div>

            <div>
              ￥<%= item.with_tax_price %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
